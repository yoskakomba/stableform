<header>
    <nav class="navbar navbar-fixed-top navbar-default">
    
      <div class="nav-item">
              <%= link_to image_tag('stablelogosmall1.png'), root_path, id: "logo"  %>
      </div>
    
      <div class="container-fluid">
        <!-- BRAND AND TOGGLE GET GROUPED FOR BETTER MOBILE DISPLAY -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-collapse-1" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
            
        </div><!-- NAVBAR HEADER -->
        
        
        <!-- COLLECT THE LINKS FORMS AND OTHER CONTENT FOR TOGGLING -->
        <div class="collapse navbar-collapse" id="bs-example-collapse-1">
            
              <ul class="nav navbar-nav navbar-left">
              
                
                <li><%= link_to "Home", root_path %></li>
                <% if !logged_in? %>
                  <li><%= link_to "Register Now", register_path %></li>
                <% end %>
                <% if logged_in? %>
                  <li><%= link_to "Book Massage Now", new_enrollment_path %></li>
                  
                  <li class="dropdown">
                    <%= link_to '#', class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
                      <%= current_user.clientname %> <b class="caret"></b>
                      <ul class="dropdown-menu">
                        <li><%= link_to "View Profile", client_path(current_user) %></li>
                        <li><%= link_to "Edit Profile", edit_client_path(current_user) %></li>
                        <li class="divider"></li>
                        <li><%= link_to "Logout", logout_path %></li>
                      </ul>
                    <% end %>
                  </li>
                <% else %>
                  <li><%= link_to "Log in", login_path %></li>
                <% end %>
              
              </ul>
              
              <form class="navbar-form pull-right col-sm-4">
                    <div class="input-group">
                        <input type="search" class="form-control" placeholder="Search"/>
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default">Search</button>
                        </span> 
                    </div>
              </form>
              
  
        </div><!-- /.navbar-collapse -->
        
      </div><!-- CONTAINER FLUID -->
      
    </nav><!-- NAVBAR --> 
    
</header>